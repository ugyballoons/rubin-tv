{% extends "layout.jinja" %}
{% block content %}
  <h2>Online Cameras</h2>
  <nav class="camera-list">
    <ul>
      {% for camera in cameras.values() %}
        <li>
          {% if camera.online %}
            <a href="/rubintv/{{ camera.slug }}">{{ camera.name }}</a>
          {% else %}
            {{ camera.name }}
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endblock content %} 